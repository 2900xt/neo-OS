#include <stdlib/SafePointer>
#include <stdout.h>

class String : public SafePointer<char>
{
public:
	String(const char* data) : SafePointer<char>(data, strlen(data)) {}
	String(const String& obj) : SafePointer<char>(obj.ptr, obj.size) {}

	const char* c_str(void)
	{
		return this->unsafe_ptr();
	}

	char* begin(void)
	{
		return (char*)this->unsafe_ptr();
	}
};
