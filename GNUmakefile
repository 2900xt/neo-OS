	 -M q35\
	 -m 2G\
	 -bios ovmf-x64/OVMF.fd\
	 -drive format=raw,file=neo-OS.hdd,cache=writeback\
	 -smp cpus=4\
	 -serial stdio\
	 -netdev user,id=n0\
	 -device rtl8139,netdev=n0\
